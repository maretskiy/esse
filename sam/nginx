upstream example.org {
	# Production
	server unix:/tmp/example.org.sock;

	# Development
	server 127.0.0.1:8888;
}

server {
	set $path /srv/sites/example.org;

	listen 80;
	server_name example.org *.example.org;

	proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;

	access_log /var/log/nginx/example.org/access.log;
	error_log  /var/log/nginx/example.org/error.log;

	location @maintenance {
		rewrite ^/static/images/(.+)$ $path/static/images/$1 break;
		rewrite ^(.*)$ $path/templates/503.html break;
		root /;
	}
	error_page 503 502 @maintenance;

	location /static {
		alias $path/static;
		access_log off;
		expires 7d;
	}

	location /robots.txt {
		alias $path/static/robots.txt;
		expires 7d;
	}

	location / {
		# Maintenance
		#return 503;
		#if ($remote_addr != "127.0.0.1") { return 503; }

		proxy_pass http://example.org;
	}
}

## SSL
server {
	set $path /srv/sites/example.org;

	listen 443;
	server_name example.org *.example.org;

	access_log /var/log/nginx/example.org/access.log;
	error_log  /var/log/nginx/example.org/error.log;

	proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-Protocol https;

	ssl on;

	# Paths to CRT and KEY
	ssl_certificate /etc/nginx/ssl/selfgenerated.crt;
	ssl_certificate_key /etc/nginx/ssl/selfgenerated.key;

	ssl_protocols SSLv2 SSLv3 TLSv1;
	ssl_ciphers ALL;
	ssl_session_cache shared:SSL:10m;
	ssl_session_timeout 10m;

	location /static {
		alias $path/static;
		access_log off;
		expires 7d;
	}

	location /robots.txt {
		alias $path/static/robots.txt;
		expires 7d;
	}

	location / {
		proxy_pass http://example.org;
	}
}
